<Window x:Class="Easy3D.MainWindow"
        x:Name="Screen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Easy3D"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized">
    <Canvas x:Name="MainCanvas">
        <Canvas.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.519"/>
                <GradientStop Color="#FF00DAFF" Offset="0.484"/>
            </LinearGradientBrush>
        </Canvas.Background>
        <TextBlock x:Name="FPS" Panel.ZIndex="99" Margin="2pt" Padding="5" Background="White"/>
    </Canvas>
</Window>
